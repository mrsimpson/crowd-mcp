{
  "name": "crowd-mcp",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "crowd-mcp": "./dist/index.js",
    "crowd-mcp-cli": "./dist/cli.js",
    "notification-test-server": "./dist/test/notification-test-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "test:notifications": "npm run build && node dist/test/test-client.js",
    "test:notifications:server": "npm run build && node dist/test/notification-test-server.js"
  },
  "dependencies": {
    "@crowd-mcp/shared": "workspace:*",
    "@crowd-mcp/web-server": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.3",
    "yaml": "^2.8.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.31",
    "@types/node": "^22.10.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
